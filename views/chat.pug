head
    title Messaging App
    link(rel="stylesheet", href="/css/common.css")
    link(rel="stylesheet", href="/css/chat.css")
body
    nav
        section.left
            a(href="/") Back
        section.center
            span #{chat_id}
        section.right
            a #{user_id}
    main#chatbox
        ul
            each message in messages
                li
                    div(class=user_id===message.author_id?"self":"") #{message.text}
                    label #{message.author_id}
    footer
        form(action=`/message/${user_id}/${chat_id}`, method="post")
            input(type="text" name="message")
            button(type="submit") Send
        script(src="/js/chat.js")